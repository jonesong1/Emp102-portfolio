<%- include partials/header.ejs %> <%- include partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container-fluid">
  <!--Set background, uses fontawesome and uses css for transparent box
  uses redirect post when submit form-->
  <div
    style="background: url(/assests/images/bg_05.jpg)"
    class="page-holder bg-cover"
  >
    <div class="bg-transparent-black text-shadow">
      <div class="row mb-4">
        <div class="col-sm-12">
          <header>
            <h2>Contact</h2>
          </header>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <form
            action="/"
            onsubmit="return alert('Thank you! I will be in touch with you soon.');"
            method="post"
          >
            <div class="form-group">
              <input
                type="text"
                id="contact_fname"
                class="form-control"
                placeholder="First Name"
                required=""
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                id="contact_lname"
                class="form-control"
                placeholder="Last Name"
                required=""
              />
            </div>
            <div class="form-group">
              <input
                type="email"
                id="contact_email"
                class="form-control"
                placeholder="Email"
                required=""
              />
            </div>
            <div class="form-group">
              <textarea
                id="contact_message"
                name="contact_message"
                class="form-control"
                rows="9"
                placeholder="Message"
                required=""
              ></textarea>
            </div>
            <button type="submit" class="btn-submit btn-contact ml-auto">
              Submit
            </button>
          </form>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="media bg-transparent-black border-white">
            <i class="fas fa-phone-square-alt icon-circled icon-media"></i>
            <div class="media-body">
              <h5>Call or mail me</h5>
              <p>+1-416-647-7777</p>
              <address>777 Yonge Street, Toronto, ON M5K7T9</address>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include partials/bottom_nav.ejs %> <%- include partials/footer.ejs %>
